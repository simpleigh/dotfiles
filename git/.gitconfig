[alias]
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

[color]
	ui = 1

[color "grep"]
	context = normal
	filename = magenta
	function = normal
	linenumber = green
	match = red bold
	selected = normal
	separator = cyan

[core]
	autocrlf = input
	safecrlf = true
	excludesfile = ~/.cvsignore
	whitespace = tabwidth=4

[fetch]
	prune = true

[grep]
	lineNumber = true

[push]
	default = simple

[user]
	name = Leigh Simpson
	email = code@simpleigh.com
